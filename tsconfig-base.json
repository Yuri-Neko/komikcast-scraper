{
  "display": "BASE",
  "compilerOptions": {
      "declaration": true,
      "declarationMap": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "isolatedModules": true,
      "moduleResolution": "Node",
      "preserveWatchOutput": true,
      "skipLibCheck": true,
      "strict": true,
      "allowJs": true,
      "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src"]
}
